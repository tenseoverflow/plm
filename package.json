{
  "name": "plm",
  "version": "0.2.0",
  "author": "tenseoverflow <contact@hen.ee>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tenseoverflow/plm.git"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "concurrently": "^9.2.1",
    "jiti": "^2.6.1",
    "orval": "^7.13.1"
  },
  "bugs": {
    "url": "https://github.com/tenseoverflow/plm/issues"
  },
  "homepage": "https://plm.hen.ee",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun --filter @plm/server dev\" \"bun --filter @plm/client dev\"",
    "build": "bun run --filter @plm/server build && bun run --filter @plm/client build",
    "start": "bun run --filter @plm/server start",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "generate:api": "bun orval --config orval.config.ts",
    "db:migrate": "bun run --filter @plm/server db:migrate"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
